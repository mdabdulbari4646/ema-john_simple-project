{
  "hosting": {
    "public": "build",
    "predeploy":[ "npm --prefix \"%RESOURCE_DIR%\" run lint","npm install","npm run build"],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
